{
  // This file extends .eslintrc at drupal root.
  // Located at /modules/contrib/splide, run:
  // eslint . -o ../../eslint/splide.html -f html
  "extends": "../../../core/.eslintrc.legacy.json",
  "globals": {
    "once": true,
    "Blazy": true,
    "dBlazy": true,
    "Promise": true,
    "Splide": true,
    "dSplide": true,
    "SwipeDetect": true
  },
  "rules": {
    "consistent-this": [0, "me"],
    "max-params": 0,
    "id-length": [1, {"min": 1}],
    // Warnings.
    "max-nested-callbacks": [1, 4]
  }
}
