{%
  set classes = [
    'l-row--no-columns',
    'c-hero-image',
  ]
%}

{% set background_url = file_url(content.field_image[0]['#media'].field_media_image.entity.uri.value) %}

<div{{ attributes.addClass(classes) }} style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url({{ background_url }})">
  {{ title_prefix }}
  {{ title_suffix }}
  <div class="c-hero-image__content">
    {% if content.field_heading|render %}
      <h1 class="c-hero-image__heading u-vr__mb--1">
        {{ content.field_heading }}
      </h1>
    {% endif %}
    {% if content.field_link.0 %}
      <a href="{{ content.field_link.0['#url'] }}" title="{{ content.field_link.0['#title'] }}" class="o-btn o-btn--primary o-btn--large o-btn--square u-vr__mt--1 draw-border">
        {{ content.field_link.0['#title'] }}
      </a>
    {% endif %}
  </div>
</div>
