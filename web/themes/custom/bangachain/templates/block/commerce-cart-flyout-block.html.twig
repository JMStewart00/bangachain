<div{{ attributes}}>
  <div class="c-cart-block--summary">
    <a class="c-cart-block--link__expand" href="{{ url }}">
      <span class="c-cart-block--summary__icon">
        <i class="fas fa-shopping-cart o-icon--green fa-3x"></i>
      </span>
      <span class="c-cart-block--summary__count">{{ count_text }}</span>
    </a>
  </div>
  {% if content %}
  <div class="c-cart-block--contents">
    <div class="c-cart-block--contents__inner">
      <div class="c-cart-block--contents__items">
        {{ content }}
      </div>
      <div class="c-cart-block--contents__links">
        {{ links }}
      </div>
    </div>
  </div>
  {% endif %}
</div>
