<div class="cart--cart-offcanvas">
  <div class="cart--cart-offcanvas__close d-flex justify-content-center">
    <picture>
      <source srcset="{{ base_path ~ directory }}/assets/images/logo.png" media="(max-width: 639px)">
      <source srcset="{{ base_path ~ directory }}/assets/images/logo.png" media="(min-width: 640px)">
      <img src="{{ base_path ~ directory }}/assets/images/logo.png" alt="Bang-A-Chain logo">
    </picture>
  </div>
<% if (count > 0) { %>
  <div class="cart-block--offcanvas-contents">
    <div class="cart-block--offcanvas-contents__inner">
      <div class="cart-block--offcanvas-contents__items"></div>
      <div class="cart-block--offcanvas-contents__links d-flex justify-content-end px-5">
        <%= links %>
      </div>
    </div>
  </div>
<% } else { %>
  <div>{{ 'Your cart is empty'|t }}</div>
<% } %>
</div>
