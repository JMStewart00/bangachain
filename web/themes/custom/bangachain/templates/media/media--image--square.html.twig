#}
{{ attach_library('easy_responsive_images/resizer') }}

{% set file = media.field_media_image.entity %}
{% set src = file.uri.value|image_url('responsive_1_1_50w') %}
{% set srcset = [
  file.uri.value|image_url('responsive_1_1_150w')|render ~ ' 150w',
  file.uri.value|image_url('responsive_1_1_350w')|render ~ ' 350w',
  file.uri.value|image_url('responsive_1_1_550w')|render ~ ' 550w',
  file.uri.value|image_url('responsive_1_1_950w')|render ~ ' 950w',
  file.uri.value|image_url('responsive_1_1_1250w')|render ~ ' 1250w',
  file.uri.value|image_url('responsive_1_1_1450w')|render ~ ' 1450w',
] %}
<img src="{{ src|raw }}" data-srcset="{{ srcset|join(',')|raw }}" alt="{{ media.field_media_image.alt }}" loading="lazy" />
