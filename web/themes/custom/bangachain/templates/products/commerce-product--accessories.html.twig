{#
/**
 * @file
 *
 * Default product template for accessories.
 *
 * Available variables:
 * - attributes: HTML attributes for the wrapper.
 * - product: The rendered product fields.
 *   Use 'product' to print them all, or print a subset such as
 *   'product.title'. Use the following code to exclude the
 *   printing of a given field:
 *   @code
 *   {{ product|without('title') }}
 *   @endcode
 * - product_entity: The product entity.
 * - product_url: The product URL.
 *
 * @ingroup themeable
 */
#}

{%
  set classes = [
    'c-product',
  ]
%}

<article{{attributes.addClass(classes)}}>
  <div class="l-container">
    <div class="l-grid l-grid--sidebar-right u-vr__mt--2 u-vr__mb--4">

      <div class="l-grid__main l-main">

        <div class="c-product__image u-vr__mb--1">
            {{ product.variation_field_product_image }}
        </div>

      </div>

      <div class="l-grid__sidebar l-sidebar">

        <div class="c-product__title u-vr__mb--1">
          <h1 class="u-color__blue">{{ product.title }}</h1>
          <h2 class="u-color__blue-gray">{{ product.field_brand }}</h2>
        </div>

        <div class="c-product__price-stock u-vr__mb--1">
          <div class="c-product__price u-fw__bold">{{ product.variation_price }}</div>
          <div class="c-product__stock">{{ product.variation_field_stock }}</div>
        </div>
      </div>

    </div>

    {% if product.field_description|render %}
      <div class="c-product__description u-vr__mb--4">
        <h2 class="h1">About the {{ product.title.0['#context'].value }}</h2>
        {{- product.field_description -}}
      </div>
    {% endif %}

    <div class="c-product__variations u-vr__mb--4">
      {{ drupal_view('variations_on_product_page', 'block_1') }}
    </div>

  </div>
</article>
