{#
/**
 * @file
 *
 * Default product template for discs.
 *
 * Available variables:
 * - attributes: HTML attributes for the wrapper.
 * - product: The rendered product fields.
 *   Use 'product' to print them all, or print a subset such as
 *   'product.title'. Use the following code to exclude the
 *   printing of a given field:
 *   @code
 *   {{ product|without('title') }}
 *   @endcode
 * - product_entity: The product entity.
 * - product_url: The product URL.
 *
 * @ingroup themeable
 */
#}

{%
  set classes = [
    'c-product',
  ]
%}

<article{{attributes.addClass(classes)}}>
  <div class="l-container">
    <div class="l-grid l-grid--sidebar-right u-vr__mt--2 u-vr__mb--4">

      <div class="l-grid__main l-main">

        <div class="c-product__image u-vr__mb--1">
          {% if product.field_default_image|render %}
            {{ product.field_default_image }}
          {% else %}
            <img src="/{{ base_path ~ directory }}/assets/images/logo.png" alt="Default Disc Photo">
          {% endif %}
        </div>

      </div>

      <div class="l-grid__sidebar l-sidebar">

        <div class="c-product__title u-vr__mb--1">
          <h1 class="u-color__blue">{{ product.title }}</h1>
          <h2 class="u-color__blue-gray">{{ product.field_brand }}</h2>
        </div>

        <div class="c-product__description u-vr__mb--1">
          <div class="h3">{{ product.variation_price }}</div>
          {{- product.field_description -}}
        </div>

        <div class="c-product__flight-numbers u-vr__mb--1">
          <h3 class="u-color__blue">{{'Flight Numbers'|t}}</h3>
          <ul class="o-list-inline d-flex justify-content-start">
            <li class="c-product__speed o-list-inline__item u-color__blue" title="Speed">
              <span>Speed</span>
              <span>{{ product.field_speed }}</span>
            </li>
            <li class="c-product__glide o-list-inline__item u-color__blue" title="Glide">
              <span>Glide</span>
              <span>{{ product.field_glide }}</span>
            </li>
            <li class="c-product__turn o-list-inline__item u-color__blue" title="Turn">
              <span>Turn</span>
              <span>{{ product.field_turn }}</span>
            </li>
            <li class="c-product__fade o-list-inline__item u-color__blue" title="Fade">
              <span>Fade</span>
              <span>{{ product.field_fade }}</span>
            </li>
          </ul>
        </div>

        <div class="c-product__add-to-cart">
          {{ product.variations }}
        </div>
      </div>

    </div>
  </div>
</article>
